<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brandBlue"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="Criminal Code of Canada"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:src="@drawable/leaf" />


            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:padding="8dp"
                android:src="@drawable/dots_white"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>


    <!-- Comments -->
    <LinearLayout
        android:id="@+id/dummy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/brandRed"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brandRed"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/btn_search_open"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:padding="6dp"
                    android:src="@drawable/search_white" />


                <RelativeLayout
                    android:id="@+id/lyt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="248dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/search_bubble" />

                    <EditText
                        android:id="@+id/edt_search"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btn_search"
                        android:backgroundTint="#FFFFFF"
                        android:hint="search..."
                        android:maxLines="1"
                        android:lines="1"
                        android:paddingBottom="8dp"
                        android:layout_marginBottom="12dp"
                        android:paddingTop="12dp"
                        android:textColor="#aaffffff"
                        android:textColorHint="#f2f0f0"
                        android:textSize="24sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:padding="6dp"
                        android:src="@drawable/search_white" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/btn_parts"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="8dp"
                        android:src="@drawable/menu_white" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/view" />


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/local_html"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c3c3c3"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/webview"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


            </LinearLayout>



            <ListView
                android:id="@+id/listview_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:divider="@null"
                tools:visibility="visible"
                android:fastScrollAlwaysVisible="true"
                android:fastScrollEnabled="true" />


            <LinearLayout
                android:id="@+id/parts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:visibility="gone"
                tools:visibility="gone">

                <ListView
                    android:id="@+id/listview_heading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:fastScrollAlwaysVisible="true"
                    android:fastScrollEnabled="true"/>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brandRed">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_comments"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:src="@drawable/comments_white"
                android:visibility="invisible"
                tools:visibility="visible" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <ListView
            android:id="@+id/comments_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF" />


    </LinearLayout>


</LinearLayout>